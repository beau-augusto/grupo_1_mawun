<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>

    <body>
        <%- include('../partials/bo-header') %>
            <main>
                <section class="abm-inventory container full-height">
                    <%- include('../partials/bo-nav') %>

                    <div id="dialogbox" style="display: none">¿Seguro que querés borrar este usuario?</div>

                    
                    <div class="abm-inventory-wrapper">
                        <h2 class="abm-title-inv">Inventario de Usuarios</h2>
                        <div class="search-crear-wrapper">

                            <form action="/admin/buscar-usuario" method="GET" class="searchInventario" >
                                <input type="text" maxlength="256" name="fuckingBug" placeholder="Buscar" class="searchFieldInventario">
                                <a href="/admin/inventario-usuarios" style="text-decoration: none"><i class="fas fa-times submit"></i></a>
                                <button type="submit" class="searchInven__submit"><i class="fa fa-search"></i></button>
                            </form>
                            
                            <a href="/admin/crear-usuario" class="botonesInventarioCrear"> Crear</a>
                            
                        </div>
                        
                        <% if(locals.errors && errors.notFound) { %> 
                            <p class="abm-input-error"><%= errors.notFound.msg %> </p> <br> 
                        <% } %> 
                        <div class="grid-container">


                            <div class="grid-item abm-input-tit">
                                <label>ID</label><br>
                            </div>
                            <div class="grid-item abm-input-tit">Nombre</div>
                            <div class="grid-item abm-input-tit">Role</div>
                            <div class="grid-item abm-input-tit">Acciones</div>

                            <% users.forEach(user => { %>

                                <div class="grid-item checkboxInventario">


                                    <label for="vehicle1">
                                        <%=user.id%>
                                    </label>
                                </div>
                                <div class="grid-item itemInfo">
                                    <%= user.name %> <%= user.last_name %>
                                </div>
                                <div class="grid-item itemInfo">
                                    <%= user.roles.name %>
                                </div>
                                <div class="grid-item botonesWrapper">
                                    <a href="/admin/<%= user.id %>/perfil/" class="botonesInventario1">Ver</a>
                                    <a href="/admin/<%= user.id %>/editar-usuario/" class="botonesInventario2">Editar</a>
                                    <form action="/admin/<%= user.id %>/delete-usuario?_method=DELETE" class="borrarUsuario <%= user.id %>delete" method="POST">
                                    </form>
                                    <button class="botonesInventario3" id="<%= user.id %>delete" value="Borrar">Borrar</button>
                                </div>
                                
                                <% }) %>

                        </div>
                    </div>
                </section>
            </main>
            <%- include('../partials/bo-footer') %>
    <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js" integrity="sha256-VazP97ZCwtekAsvgPBSUwPFKdrwD3unUfSGVYrahUqU=" crossorigin="anonymous"></script>
    <script src="/javascript/dialogbox.js"  type="text/javascript"></script>
    </body>

</html>