<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>

    <body>
        <%- include('../partials/bo-header') %>
            <main>
                <section class="abm-inventory container">

                    <h2 class="abm-title-inv">Inventario</h2>

                    <div class="abm-inventory-wrapper">

                        <div class="search-crear-wrapper">

                            <form action="/" method="POST" class="searchInventario">
                                <input type="search" maxlength="256" placeholder="Buscar" class="searchFieldInventario">
                                <button class="searchInven__submit"><i class="fa fa-search"></i></button>
                            </form>

                            <a href="/admin/crear" class="botonesInventarioCrear"> Crear</a>

                        </div>

                        <div class="grid-container">


                            <div class="grid-item abm-input-tit">
                                <input type="checkbox" id="vehicle1" name="vehicle1" value="Bike">
                                <label for="vehicle1"> ID</label><br>
                            </div>
                            <div class="grid-item abm-input-tit">Art√≠culo</div>
                            <div class="grid-item abm-input-tit">Recomendado</div>
                            <div class="grid-item abm-input-tit">Acciones</div>

                            <% products.forEach(product=> { %>

                                <div class="grid-item checkboxInventario">

                                    <input type="checkbox" id="vehicle1" name="vehicle1" value="Bike"
                                        class="checkboxCheck">
                                    <label for="vehicle1">
                                        <%=product.id%>
                                    </label>
                                </div>
                                <div class="grid-item itemInfo">
                                    <%= product.product_name %>
                                </div>
                                <div class="grid-item itemInfo">
                                    <%= product.recommended %>
                                </div>
                                <div class="grid-item botonesWrapper">
                                    <a href="/productos/detalle/<%= product.id %>" class="botonesInventario1">Ver</a>
                                    <a href="/admin/<%= product.id %>/editar" class="botonesInventario2">Editar</a>
                                    <form action="/admin/<%= product.id %>/delete?_method=DELETE" method="POST">
                                        <input type="submit" class="botonesInventario3" value="Borrar">
                                    </form>
                                </div>
                                
                                <% }) %>

                        </div>
                    </div>
                </section>
            </main>
            <%- include('../partials/bo-footer') %>
    </body>

</html>