<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>

    <body>
        <%- include('../partials/bo-header') %>
            <main>
                <section class="abm-inventory container">
                    <%- include('../partials/bo-nav') %>
                    </div>
                    <div class="abm-inventory-wrapper">
                         <h2 class="abm-title-inv">Inventario de Newsletter</h2>

                        <div class="grid-container">
                            <div class="grid-item abm-title-tit">
                                <label>ID</label><br>
                            </div>
                            <div class="grid-item abm-title-tit">Emails</div>
                            <div class="grid-item abm-title-tit"></div>
                            <div class="grid-item abm-title-tit">Accion</div>

                            <% newsletter.forEach(newsletter=> { %>

                                <div class="grid-item checkboxInventario">
                                    <label> <%=newsletter.id%> </label>
                                </div>
                                <div class="grid-item itemInfo">
                                    <%= newsletter.email %>
                                </div>
                                <div class="grid-item itemRecom"></div>
                                 <div class="grid-item botonesWrapper">
                                <form action="/admin/<%= newsletter.id %>/delete-email?_method=DELETE" method="POST">
                                    <input type="submit" class="botonesInventario3" value="Borrar">
                                </form>
                                </div>

                                
                                <% }) %>

                        </div>
                    </div>
                </section>
            </main>
            <%- include('../partials/bo-footer') %>
    </body>

</html>