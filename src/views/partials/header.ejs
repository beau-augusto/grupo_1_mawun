
<header class="bgc-fw" style="position: sticky; top: 0; z-index: 1;">
    <nav class="hero-menu-wrapper container" >
        <div class="hero-logo-div"> <a href="/"><img src="/images/mawun-logo-w.svg" alt="MAWUN" class="hero-logo"></a></div>
        <div class="hero-search">
            <div class="hero-search-wrapper">
                <form action="/resultado-busqueda" method="GET" class="hero-menu-wrapper">
                    <input type="text" name="wineSearch" maxlength="256" placeholder="Buscar Vinos" class="hero-search__field">
                    <button type="submit" class="hero-search__submit"><i class="fa fa-search"></i></button>
                </form>
                <% if(locals.errors && errors.notFound) { %> 
                    <p class="search-input-error"><%= errors.notFound.msg %> </p> <br> 
                <% } %>
            </div>
        </div>
        <div class="hero-burger-wrap"><i class="fas fa-bars"></i></div>
        <ul class="hero-menu">
            <li><a href="/productos">Tienda</a></li>
            <li><a href="/nosotros">Nosotros</a></li>
            <li><a href="/contacto">Contacto</a></li>
        </ul> 
        <div class="hero-cart">
            
            <% if (locals.usuarioLogeado) { %>

                
                <a href="/productos/carrito" class="hero-cart-link"><i class="fas fa-shopping-cart hero-cart-counter-wrapper"><div class="product-delivery-icon hero-cart-counter"><div class="cartNumber"></div></div></i> </a>
                <a href="/usuarios/perfil/" class="hero-profile-picture-link"><img src="/upload/profile-pictures/<%=locals.usuarioLogeado.image%>"  class="hero-profile-picture-link"></a>
                
                
                
                <!-- <a href="/productos/carrito" class="hero-cart-link"><i class="fas fa-shopping-cart"></i> </a> <div class="fas fa-circle"></div> <div class="cartNumber"></div> -->
                <!-- <a href="/usuarios/perfil/" class="hero-profile-picture-link"><img src="/upload/profile-pictures/<%=//locals.usuarioLogeado.image%>"  class="foto-nav-logged"></a> -->
               
            <% } else{  %> 
                <a href="/productos/carrito" class="hero-cart-link"><i class="fas fa-shopping-cart"></i></a>
                <a href="/usuarios/inicio" class="hero-cart-link"><i class="far fa-user"></i></a>
               
            <% } %>

        </div>
          
       

    </nav>
</header>
