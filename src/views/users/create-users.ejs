<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body>
    <%- include('../partials/header') %>
    <main>
        <section class="abm-productos container">
            <div class="abm-producto-wrapper">
                <h2 class="abm-title">Registro</h2>
                <form action="/" class="abm-form-wrapper" method="POST" enctype="multipart/form-data">
                    <div class="abm-input-container">
                        <div class="abm-input-wrap">
                            <label for="first_name" class="abm-input-tit">Nombre</label>
                            <input type="text" name="first_name" id="first_name" placeholder="Nombre" class="abm-input">
                        </div>
                        <div class="abm-input-wrap">
                            <label for="last_name" class="abm-input-tit">Apellido</label>
                            <input type="text" name="last_name" id="last_name" placeholder="Apellido" class="abm-input">
                        </div>
                        <div class="abm-input-wrap-email">
                            <label for="email" class="abm-input-tit">Email</label>
                            <input type="email" name="email" id="email" placeholder="E-mail" class="abm-input">
                        </div>
                        <div class="abm-input-wrap">
                            <label for="password" class="abm-input-tit">Contrase単a</label>
                            <input type="password" name="password" id="password" placeholder="Contrase単a" class="abm-input">
                        </div>     
                        <!--<div class="abm-input-wrap">
                            <label for="password" class="abm-input-tit"> Repetir Contrase単a</label>
                            <input type="password" id="password" placeholder="Contrase単a" class="abm-input">
                        </div>-->
                        <div class="abm-input-wrap">
                            <label for="image" class="abm-input-tit">Subir imagen</label>
                            <input type="file" name="image" id="image" placeholder="Subir imagen" class="abm-input">
                        </div>
                    </div>
                    <div class="abm-button-wrap">
                        <button type="submit" class="abm-button-submit">ENVIAR</button>
                    </div>
                </form>
            </div>
        </section>
    </main>
    <%- include('../partials/footer') %>
</body>
</html>