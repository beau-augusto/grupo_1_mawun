<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body>
    <%- include('../partials/header') %>
    <main>
        <div class="page-title">
            <img src="/images/page-title-img.jpg" alt="Tienda" class="page-title-img">
            <div class="container">
                <div class="page-title-desc">
                    <h1>TIENDA</h1>
                </div>
            </div>
        </div>
        <section class="container">
            <div class="product-grid">
                <% products.forEach(product => { %>
                <article class="product-grid-item">
                    <a href="/productos/detalle">
                        <img src="/upload/products/<%= product.image %>" alt="<%= product.product_name %>" class="product-grid-img">
                        <h4><%= product.product_name %></h4>
                        <p class="product-grid-title">$<%= product.price %></p>
                        <div class="button-wrap"><a href="/productos/carrito" class="product-grid-button">AGREGAR AL CARRITO</a></div>
                    </a> 
                </article>
                <% }) %>
            </div>
        </section>
    </main>
    <%- include('../partials/footer') %>
</body>
</html>