var app = angular.module('ViDApp');
app.service('validationService', ['$uibModal', function($uibModal) {

  this.openModal = function(validationErrors, saveOptions) {
    $uibModal.open({
      ariaLabelledBy: 'modal-title-bottom',
      ariaDescribedBy: 'modal-body-bottom',
      templateUrl: 'validations-modal.html',
      size: 'med',
      resolve: {
        validationErrors: function () {
          return validationErrors;
        },
        saveOptions: function () {
          return saveOptions;
        }
      },
      controller: 'ValidationsModalInstanceCtrl',
      controllerAs: '$ctrl'
    });
  }


}]);
