var ViDApp = angular.module('ViDApp');
ViDApp.controller('DeleteDescriptionModalInstanceCtrl', function($uibModalInstance, descriptionService, deleteDescIndex) {
  var $ctrl = this;
  $ctrl.descriptionService = descriptionService;
  $ctrl.deleteDescIndex = deleteDescIndex;

  $ctrl.delete_description = function() {
    $uibModalInstance.close();
  	$ctrl.descriptionService.deleteDescription($ctrl.deleteDescIndex);
  };

  $ctrl.cancel = function() {
    $uibModalInstance.close(false);
  };
});
